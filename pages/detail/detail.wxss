/* pages/detail/detail.wxss */

page {
  box-sizing: border-box;
  font-size: 20px;
  font-family: 黑体;
  background: #f4f4f4;
}

image {
  display: block;
  border-radius: 4px;
}

.container {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  background: #fff;
  padding-bottom: 2rem;
}

.container .banner {
  width: 90%;
  height: 10rem;
  margin-bottom: 1rem;
}

.container .banner image {
  width: 100%;
  height: 100%;
}

.main, .main2 {
  width: 90%;
  margin: 0 auto;
}

.main {
  padding-bottom: 1rem;
  border-bottom: 1px solid #ccc;
}

.h1 {
  font-size: 0.8rem;
}

.main view, .main2 .title {
  display: flex;
}

.main2 .title {
  margin-top: 0.8rem;
}

.main view image, .main2 view image {
  width: 1rem;
  height: 1rem;
}

.main .ul, .main2 .ul {
  width: 100%;
  display: block;
}

.main .ul .li, .main2 .ul .li {
  width: 32.5%;
  box-sizing: border-box;
  height: 4.3rem;
  margin-top: 0.8rem;
  margin-left: 1.25%;
  float: left;
}

.main .ul .li:first-child, .main .ul .li:nth-of-type(3n+1),
.main2 .ul .li:nth-of-type(3n+1) {
  margin-left: 0;
}

.main2 .ul .li:first-child {
  border-color: #1aac19;
  color: #1aac19;
  margin-left: 0;
}

.main .ul .li image {
  width: 100%;
  height: 100%;
}

.main2 .ul .li {
  font-size: 0.9rem;
  border: 1px solid #989;
  border-radius: 5px;
  justify-content: center;
  flex-wrap: wrap;
  align-items: center;
  display: flex;
  color: #7f7f7f;
  flex-direction: column;
}

.section {
  width: 100%;
  margin: 0;
  background: #fff;
  margin-top: 1rem;
  /*padding: 1rem 0;*/
}

.section .ul {
  width: 90%;
  margin: 0 auto;
  padding: 1rem 0;
}

.section .ul .li {
  width: 100%;
  display: flex;
  font-size: 0.9rem;
  padding: 1rem 0;
  border-bottom: 1.5px solid #f4f4f4;
}

.section .ul .li .span {
  min-width: 4rem;
}

.section .ul .li .b {
  padding-left: 1rem;
  color: #7f7f7f;
}

.footer {
  width: 100%;
  margin: 0 auto;
  background: #fff;
  height: 4rem;
}
.footer button{
  width: 90%;
}
