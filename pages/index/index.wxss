/**index.wxss**/

page {
  box-sizing: border-box;
  font-size: 20px;
  background: #f9f9f9;
  font-family: 微软雅黑;
}

image {
  display: block;
}

.banner {
  width: 100%;
  height: 15rem;
  margin-bottom: 1rem;
}

.banner image {
  width: 100%;
  height: 100%;
  /*background: #ccc;*/
}

.container {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
}

.section {
  width: 100%;
}

.section2 {
  overflow:hidden;
}

.section .section1, .section .section2, .section .section3 {
  width: 90%;
  margin: 0 auto;
}

.section .section1 .main1, .section2 .main2 {
  width: 100%;
}

.title {
  height: 2rem;
  line-height: 2rem;
  font-size: 0.96rem;
  color: #0d0d0d;
  font-weight: 600;
}

.ul {
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.ul .li {
  display: flex;
  width: 46.5%;
  flex-direction: column;
  justify-content: space-between;
  height: 8rem;
  background: #fdfffa;
  border-radius: 8px;
  margin-bottom: 1rem;
 box-shadow:0px 2px 20px 2px #ddd;

}

.ul .li .span {
  font-size: 0.8rem;
  color: #a9a9a9;
  text-align: center;
  line-height: 2rem;
}

.ul .li image {
  height: 6rem;
  width: 100%;
  border-radius: 8px 8px 4px 4px;
}

.section3 {
  height: 1rem;
  display: flex;
  justify-content: center;
  align-items: center;
}

.section3 image {
  width: 1rem;
  height: 1rem;
}

.section3 .text {
  font-size: 0.8rem;
  color: #06227e;
}

.footer {
  width: 90%;
  margin-top: 2rem;
  margin-left: auto;
  margin-right: auto;
  height: 2rem;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 0.8rem;
  color: #a9a9a9;
  border-top: 1px solid #eee;
}
