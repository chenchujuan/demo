
<!--pages/order/order.wxml-->
<view class="container">
  
    <view class="header" wx:for="{{starbar}}" wx:for-item="i">
   
      <view class="lheader">
       <image src="{{ip}}{{i.src}}"></image>
      </view>
      <view class="rheader">
        <text class="p">{{i.names}}</text>
        <text class="b">{{i.price}}</text>
      </view>
    </view>
  
  <view class="main">
    <view class="tmain">
      <text class="span">订单号:</text>
      <text class="a">{{number}}</text>
    </view>
    <view class="cmain">
      <text class="span">下单时间:</text>
      <text class="a">{{time}}</text>
    </view>
    <view class="tmain">
      <text class="span">已付款:</text>
      <text class="a">{{payment}}</text>
    </view>
    <view class="last">
      <text class="span">使用详情:</text>
      <text class="a">{{use}}</text>
    </view>
  </view>

  <view class="footer">
    <view class="h">售后帮助</view>
  </view>
</view>