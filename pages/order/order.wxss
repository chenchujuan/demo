/* pages/order/order.wxss */

page {
  background: #f5f5f5;
  font-size: 16px;
  font-family: 微软雅黑;
}

.container {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.header {
  width: 100%;
  height: 6rem;
  margin-top: 1rem;
  background: #fff;
  display: flex;
  border-bottom: 1px solid #ddd;
}

.lheader {
  width: 6rem;
  height: 100%;
  margin: 1rem;
}

.lheader image {
  width: 6rem;
  height: 4rem;
  border-radius: 5px;
}

.rheader {
  height: 100%;
  font-size: 0.95rem;
  display: flex;
  flex-direction: column;
  margin-top: 1rem;
}

.rheader .p {
  color: #000;
  font-size: 1rem;
}

.rheader .b {
  color: forestgreen;
  margin-top: 1rem;
}

.main {
  width: 100%;
  height: 10rem;
  background: #fff;
}

.main .span {
  color: #bababa;
  font-size: 0.75rem;
}

.main .a {
  color: #aaa;
  font-size: 0.9rem;
}

.tmain, .cmain, .bmain, .last {
  margin: 1rem;
  font-size: 1rem;
  display: flex;
  justify-content: space-between;
}

.footer {
  width: 100%;
 
  
  position: absolute;
  bottom:1rem;
  margin: 0 auto;
}

.footer .h {
  width: 5rem;
  height: .5rem;
  margin: 0 auto;
  color: #aaa;
  font-size: 0.8rem;
}
